@model OnlineShop.Models.ProductCategory

@{
    ViewData["Title"] = "Edit Product Category";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Id">ID</label>
        <input type="text" class="form-control" id="Id" name="Id" value="@Model.ProductCategoryId" readonly />
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    
    <button type="submit" class="btn btn-warning">Update</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
