@model IEnumerable<OnlineShop.Models.SalesOrderViewModel>
@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Line Total</th> <!-- Optional, if you want to show the total for this product -->
            <th>Total Due</th> <!-- Optional, if you want to show the overall total -->
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ProductId</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td> <!-- Format as currency -->
                <td>@order.Quantity</td>
                <td>@order.LineTotal.ToString("C")</td> <!-- Optional, format as currency -->
                <td>@order.TotalDue.ToString("C")</td> <!-- Optional, format as currency -->
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No orders available.</p>
}
