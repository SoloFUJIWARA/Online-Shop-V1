@model IEnumerable<OnlineShop.Models.SalesOrderViewModel>
@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Line Total</th> 
            <th>Total Due</th> 
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ProductId</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
                <td>@order.LineTotal.ToString("C")</td> 
                <td>@order.TotalDue.ToString("C")</td> 
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No orders available.</p>
}
