@model OnlineShop.Models.Product

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1>Delete Product</h1>
<p>Are you sure you want to delete the following product?</p>

<div class="form-group">
    <label><strong>Name:</strong></label>
    <p>@Model.Name</p>
</div>
<div class="form-group">
    <label><strong>Product Number:</strong></label>
    <p>@Model.ProductNumber</p>
</div>
<div class="form-group">
    <label><strong>List Price:</strong></label>
    <p>@Model.ListPrice</p>
</div>
<div class="form-group">
    <label><strong>Sell Start Date:</strong></label>
    <p>@Model.SellStartDate</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Products")">Cancel</a>
</form>
