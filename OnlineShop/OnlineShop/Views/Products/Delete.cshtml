@model OnlineShop.Models.Product

@{
    ViewData["Title"] = "Delete Confirmation";
}

<h1>Delete Product</h1>
<p>Are you sure you want to delete the following product?</p>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="form-group">
    <p><strong>Name:</strong> @Model.Name</p>
</div>
<div class="form-group">
    <p><strong>Product Number:</strong> @Model.ProductNumber</p>
</div>
<div class="form-group">
    <p><strong>List Price:</strong> @Model.ListPrice</p>
</div>
<div class="form-group">
    <p><strong>Sell Start Date:</strong> @Model.SellStartDate</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Products")">Cancel</a>
</form>
