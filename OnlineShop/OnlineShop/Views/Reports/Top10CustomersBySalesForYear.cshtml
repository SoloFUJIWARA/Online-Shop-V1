@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Top 10 Customers Sales by Year";
}
<h2>Top 10 Customers Sales by Year</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Customer Name</th>
        <th>Total Sales</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerName</td>
            <td>@item.TotalSales</td> <!-- This will display the formatted sales -->
        </tr>
    }
    </tbody>
</table>
